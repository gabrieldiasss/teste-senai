  "paths": {
    "/users": {
      "post": {
        "tags": ["User"],
        "Summary": "Create user",
        "description": "Create new user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "NameTest"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Name already exists"
          }
        }
      },
      "get": {
        "tags": ["User"],
        "Summary": "List users",
        "description": "List all users",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "array",
                    "properties": {
                      "name": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/{id}": {
      "get": {
        "tags": ["User"],
        "description": "Returns users based on ID",
        "summary": "Find user by ID",
        "operationId": "id",
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "description": "get specific user",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User response",
            "content": {
              "application/json": {
                "schema": {
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "amountPosts": {
                        "type": "number"
                      },
                      "created_at": {
                        "type": "string"
                      },
                      "posts": {
                        "type": "array"
                      },
                      "reposts": {
                        "type": "array"
                      },
                      "comments": {
                        "type": "array"
                      }
                    },
                    "example": {
                      "id": 1,
                      "name": "NameTest",
                      "amountPosts": 0,
                      "created_at": "31 de maio de 2023",
                      "posts": [],
                      "reposts": [],
                      "comments": []
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Id not exists"
          }
        }
      }
    },
